<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script
      src="https://kit.fontawesome.com/64d58efce2.js"
      crossorigin="anonymous"
    ></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/4.1.1/crypto-js.min.js"></script>
    <link rel="stylesheet" href="css/style.css" />
    
    <title>Sign in & Sign up Form</title>
  </head>
  <body>
    <div id="pre">
      
    </div>
    <div class="container">
      <div class="forms-container">
        <div class="signin-signup">
          <form action="/index_auth"  method="POST" class="sign-in-form">
            <h2 class="title">Login</h2>
            <div class="input-field">
              <i class="fas fa-user"></i>
              <input type="text" id="UserInp"  name="username" placeholder="Username" />
            </div>
            <div class="input-field">
              <i class="fas fa-lock"></i>
              <input type="password" id="PassInp"  name="password" placeholder="Password" />
            </div>
            <input type="submit"  id='Sub_Btn' value="Login" class="btn solid" />
            <p class="social-text" id="flexSwitchCheckChecked">Or Sign in with Google </p>
            <div class="social-media">
              
              
              <a href="#" class="social-icon">
                <i class="fab fa-google"></i>
              </a>
              
            </div>
          </form>
          <form action="/index_auth" method="POST" class="sign-up-form">
            <h2 class="title">Sign up</h2>
            <div class="input-field">
              <i class="fas fa-user"></i>
              <input type="text" id="userInp" name="username" placeholder="Username" />
            </div>
            <div class="input-field">
              <i class="fas fa-envelope"></i>
              <input type="email" id="emailInp" name="email" placeholder="Email" />
            </div>
            <div class="input-field">
              <i class="fas fa-lock"></i>
              <input type="password" id="passInp" name="password" placeholder="Password" />
            </div>
            <div class="input-field">
              <i class="fas fa-lock"></i>
              <input type="password" id="passInp" name="confirmpassword" placeholder="Confirm Password" />
            </div>
            <input type="submit" id='sub_btn' class="btn" value="Sign up" href="user-add.html" />
            <p class="social-text">Or Sign up with Google </p>
            <div class="social-media">
              
          
              <a href="#" class="social-icon">
                <i class="fab fa-google"></i>
              </a>
              
            </div>
          </form>
        </div>
      </div>

      <div class="panels-container">
        <div class="panel left-panel">
          <div class="content">
            <h3>New here ?</h3>
            <p style="font-size:x-large; font-weight: bold;">
              WELCOME
            </p>
            <button class="btn transparent" id="sign-up-btn">
              Sign up
            </button>
          </div>
          <img src="images/img/log.svg" class="image" alt="" />
        </div>
        <div class="panel right-panel">
          <div class="content">
            <h3>One of us ?</h3>
            <p style="font-weight: bold; font-size: x-large;">
              WELCOME
            </p>
            <button class="btn transparent" id="sign-in-btn">
              Login
            </button>
          </div>
          <img src="images/img/register.svg" class="image" alt="" />
        </div>
      </div>
    </div>
    
    

    <script src="js/app1.js"></script>
  </body>
</html>